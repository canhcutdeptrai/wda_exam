@model IEnumerable<Assignment_WDA.Entities.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Department</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Department Code</th>
            <th>Location</th>
            <th>Number of Personals</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentName</td>
                <td>@department.DepartmentCode</td>
                <td>@department.Location</td>
                <td>@department.NumberOfPersonals</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@department.DepartmentId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@department.DepartmentId" class="btn btn-danger">Delete</a>
                    <a asp-action="Report" asp-route-id="@department.DepartmentId" class="btn btn-info">Department Report</a>
                </td>
            </tr>
        }
    </tbody>
</table>
